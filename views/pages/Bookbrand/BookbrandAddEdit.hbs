{{> header}}
<h2>{{viewTitle}}</h2>
<form action="/Bookbrand" method="POST">
    <input type="hidden" name="idbook" value="{{Bookbrand.idbook}}" />
    ID del libro
    <input type="text" name="namebook" value="{{Bookbrand.namebook}}"><br />
    Titulo del libro
    <input type="text" name="autorname" value="{{Bookbrand.autorname}}"><br />
    Nombres del autor
